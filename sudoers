Defaults env_reset

# Users
User_Alias ME = mitko

# Hosts
Host_Alias MY_MACHINE = debian

# Commands
Cmnd_Alias VIM = /usr/bin/vi, /usr/bin/vim, /usr/bin/vimdiff, /usr/bin/gvim, /usr/bin/gvimdiff

# User privilege specifications
root ALL = (ALL) ALL

ME MY_MACHINE = /usr/bin/tee
ME MY_MACHINE = VIM

# Allow members of group sudo to not need a password
%sudo ALL = NOPASSWD: ALL
