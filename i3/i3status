general {
    output_format = "i3bar"
    colors = true
    # i3wm.color2
    color_good = "#4e9a06"
    # i3wm.color3
    color_degraded = "#c4a000"
    # i3wm.color1
    color_bad = "#cc0000"
    interval = 5
}

order += "disk /home"
# order += "run_watch DHCP"
# order += "run_watch VPNC"
# order += "path_exists VPN"
order += "wireless wlo1"
# order += "ethernet eth0"
order += "battery 0"
# order += "cpu_temperature 0"
order += "load"
order += "tztime local"
# order += "tztime paris"

disk "/home" {
    prefix_type = binary
    threshold_type = percentage_free
    low_threshold = 10
    format = "~: %percentage_used / %total"
}

