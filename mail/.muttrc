set realname = 'Dimitar Dimitrov'
set from     = mitkofr@yahoo.fr
set use_from = yes

set mbox_type = Maildir
set folder    = ~/mail    # +
set spoolfile = +work     # inbox
set mbox      = +received # move read msgs to this folder
set record    = +sent
set postponed = +postponed

mailboxes ! +work +google

# Colors:             fg         bg
color attachment brightmagenta default
color error      brightred     default
color hdrdefault red           default
color indicator  brightyellow  green
color markers    brightcyan    default
color message    brightcyan    default
color normal     default       default
color quoted     brightblue    default
color search     default       green
color signature  red           default
color status     yellow        blue
color tilde      magenta       default
color tree       magenta       default
color header     brightgreen   default ^Date:

set sort = threads

bind index G last-entry

# Lists and aliases
subscribe vim[-_](dev|use)

source ~/config/mail/aliases
alias me Dimitar Dimitrov <mitkofr@yahoo.fr>
