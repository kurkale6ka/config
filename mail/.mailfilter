# mkdir -p ~/mail/{google,work,yahoo}/{cur,new,tmp,logs,filters}
# mkdir -p ~/mail/google/filters/vim_{dev,use}

# If the message matches no rule it goes to the inbox folder
DEFAULT="$HOME/mail/yahoo"

# TODO: separate
logfile "$HOME/mail/maildrop.log"

xfilter "$HOME/bin/mutt_notif.py"

# Filters
if (/company/)
{
   to "$HOME/mail/work"
}

if (/kurkale6ka/)
{
   to "$HOME/mail/google"
}

if (/mitkofr/)
{
   to "$HOME/mail/yahoo"
}

if (/vim[-_]dev/)
{
   to "$HOME/mail/google/filters/vim_dev"
}

if (/vim[-_]use/)
{
   to "$HOME/mail/google/filters/vim_use"
}

to "$DEFAULT"
