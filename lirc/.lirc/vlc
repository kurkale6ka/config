# Show OSD
begin
prog = vlc
button = KEY_MENU
config = osd
end

# Pause playback
begin
prog = vlc
button = KEY_PAUSE
config = key-play-pause
end

# Play
begin
prog = vlc
button = KEY_PLAY
config = key-play
end

begin
prog = vlc
button = KEY_REWIND
config = key-jump-short
end

begin
prog = vlc
button = KEY_FORWARD
config = key-faster
end

# Stop playback and exit
begin
prog = vlc
button = KEY_STOP
config = key-quit
end

# Volume Down
begin
prog = vlc
button = KEY_VOLUMEDOWN
repeat = 3
config = key-vol-down
end

# Volume Up
begin
prog = vlc
button = KEY_VOLUMEUP
repeat = 3
config = key-vol-up
end

# Faster
begin
prog = vlc
button = KEY_CHANUP
config = key-faster
end

# Slower
begin
prog = vlc
button = KEY_CHANDOWN
config = key-slower
end

# Mute
begin
prog = vlc
button = KEY_MUTE
config = key-vol-mute
end

# Seek back 10 seconds
begin
prog = vlc
button = KEY_ONE
repeat = 3
config = key-jump-short
end

# Seek forward 10 seconds
begin
prog = vlc
button = KEY_THREE
repeat = 3
config = key-jump+short
end

# Quit
begin
prog = vlc
button = KEY_BACK
config = key-quit
end

begin
prog = vlc
button = KEY_EXIT
config = key-quit
end

begin
prog = vlc
button = KEY_LIVETV
repeat = 1
config = key-quit
end

begin
prog = vlc
button = KEY_RECORDEDTV
repeat = 1
config = key-quit
end

begin
prog = vlc
button = KEY_GUIDE
repeat = 1
config = key-quit
end

# Seek forward 1 minute
begin
prog = vlc
button = KEY_SKIP
repeat = 3
config = key-jump+medium
end

# Seek backward 1 minute
begin
prog = vlc
button = KEY_REPLAY
repeat = 3
config = key-jump-medium
end

# Seek forward 5 minutes
begin
prog = vlc
button = KEY_SIX
repeat = 3
config = key-jump+long
end

# Seek backward 5 minutes
begin
prog = vlc
button = KEY_FOUR
repeat = 3
config = key-jump-long
end

# Position - shows where you are in the video
begin
prog = vlc
button = KEY_MORE
config = key-position
end

# Subtitles
begin
prog = vlc
button = KEY_ENTER
config = key-subtitle-track
end

# Snapshots
begin
prog = vlc
button = KEY_RECORD
config = key-snapshot
end

# Audio Sync'ing
# Audio Delay UP
begin
prog = vlc
button = KEY_STAR
config = key-audiodelay-up
end

# Audio Delay DOWN
begin
prog = vlc
button = KEY_HASH
config = key-audiodelay-down
end

# Navigation Menu Up
begin
prog = vlc
button = KEY_UP
repeat = 3
config = key-nav-up
end

